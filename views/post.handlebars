<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <div class="card mt-4">
        <div class="card-body">
          <div class="jumbotron jumbotron-fluid header card-title"><h1 class="display-4">New Recipe</h1></div>
          <p>

    <form id="inputField" class="input">
       <!-- RECIPE (inputid = foodName) -->
        <div class="form-row">
            <div class="form-group col-md-9">
                <label>Recipe Name</label>
                <input id="foodName" class="form-control" placeholder="Recipe Name">
            </div>
        </div>
        <div id="allIngredients">
            <!-- have to creat function which, on click of button creates new open ingredient field -->
            <!-- ingredient input field -->
            <div class="form-row">

                <!-- INGREDIENT (inputid = ingredient) -->
                <div class="for-group col-md-">
                    <label>Ingredients</label>
                    <input id="ingredient" type="text" class="form-control" placeholder="Ingredient">
                </div>

                <!-- QUANTITY (inputid = quantity) -->
                <div class="for-group col-md-3">
                    <label>Quantity</label>
                    <input id="quantity" type="text" class="form-control" placeholder="Whole #">
                </div>

                <!-- UNIT (inputid = unit) -->
                <div class="for-group col-md-3">
                    <label>Unit</label>
                    <div>
                        <select id="unit">
                            <option selected>Choose...</option>
                            <option>teaspoon</option>
                            <option>tablespoon</option>
                            <option>cup</option>
                            <option>ounce</option>
                            <option>pint</option>
                            <option>quart</option>
                            <option>gallon</option>
                            <option>pound</option>
                        </select>
                    </div>

                </div>



            </div>
            <br>

            <!-- ADD INGREDIENT BUTTON-->
            <div class="col-md-5">
                <label>Add Ingredient</label>

                <button id="addIngredient" type="submit" class="btn btn-light">+</button>
            </div>

            <br>
            <!-- TABLE TO APPEND NEW INGREDIENTS -->
            <table class="table table-hover">

                <tbody id="ingredientList">
                    <!-- <tr>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                    </tr>
                    <tr>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>@fat</td>
                    </tr>
                    <tr>
                        <td colspan="2">Larry the Bird</td>
                        <td>@twitter</td>
                    </tr> -->
                </tbody>
            </table>
        </div>

        <br>


        <!-- ALLERGY INDICATORS -->
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Gluten Free
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Dairy Free
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Vegan
                </label>
            </div>
        </div>

        <!-- PREP TIME (inputid = prepTime) -->
        <div class="for-group col-md-3">
            <label>Prep Time (mins)</label>
            <input id="prepTime" type="text" class="form-control" placeholder="60">
        </div>

        <!-- COOK TIME (inputid = cookTime) -->
        <div class="for-group col-md-3">
            <label>Cook Time (mins)</label>
            <input id="cookTime" type="text" class="form-control" placeholder="60">
        </div>
        <br>

        <!-- DIRECTIONS (inputid = instructions) -->
        <div class="for-group col-md-12">
            <label>Instructions</label>
            <div class="input-group">
                <textarea id="instructions" class="form-control"></textarea>
            </div>
        </div>
        <br>

        <!-- SUBMIT BUTTON -->
        <button type="submit" class="btn btn-primary">Sign in</button>
    </form>


      </div>
    </div>
  </div>
</div>