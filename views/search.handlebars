<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <div class="card mt-4">
                <div class="card-body">
                    <div class="jumbotron jumbotron-fluid header card-title">
                        <h1 class="display-4">Advanced Search</h1>
                    </div>
                    <p>
                        <form id="inputField" class="input">
                            <div class="form-group">
                                <label for="mealType">Select Meal Type:</label>
                                <select class="form-control" id="mealType">
                                    <option value="breakfast">Breakfast</option>
                                    <option value="lunch">Lunch</option>
                                    <option value="dinner">Dinner</option>
                                    <option value="dessert">Dessert</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="proteinType">Enter Preferred Protein Type</label>
                                <input type="proteinType" class="form-control" id="proteinType" placeholder="Chicken">
                            </div>
                            <div class="form-group">
                                <label for="veggieType">Enter Preferred Protein Type</label>
                                <input type="veggieType" class="form-control" id="veggieType" placeholder="Green Beans">
                            </div>
                            <div class="form-group">
                                <label for="dietaryRestrictions">Select Dietary Restrictions:</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="dietaryRadios" id="glutenFree"
                                        value="glutenFree">
                                    <label class="form-check-label" for="glutenFree">
                                        Gluten Free
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="dietaryRadios" id="vegetarian"
                                        value="vegetarian">
                                    <label class="form-check-label" for="vegetarian">
                                        Vegetarian
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="dietaryRadios" id="vegan" value="vegan">
                                    <label class="form-check-label" for="vegan">
                                        Vegan
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="dietaryRadios" id="dairyFree"
                                        value="dairyFree">
                                    <label class="form-check-label" for="dairyFree">
                                        Dairy Free
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="calories">Preferred Calorie Range:</label>
                                <select class="form-control" id="calories">
                                    <option value="1">Less than 300</option>
                                    <option value="2">300-450</option>
                                    <option value="3">451-600</option>
                                    <option value="4">Greater than 600</option>
                                </select>
                            </div>
                            <button type="submit" class="searchRecipe">Search</button>
                        </form>
                    </p>
                    <div id="resultsTable">
                        {{#if recipes.searched}}
                        <h3>Search Results</h3>
                        <div class="card-columns">
                            {{#each recipes.searched}}
                            <div class="card mt-2">
                                <img src="{{this.imageSrc}}" alt="recipe image unavailable" class="card-img-top img-thumbnail rounded">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.name}}</h5>
                                    <p class="card-text">
                                        <a href="{{this.description}}">{{this.description}}</a>
                                    </p>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{else}}
                        <h3>No matches found. Please refine your search!</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/search.js" charset="utf-8"></script>